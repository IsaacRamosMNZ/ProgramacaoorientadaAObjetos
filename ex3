public class Produto {
   private String nome; // Vari√°veis agora seguem a conven√ß√£o de nomenclatura
   private double preco;
   public Produto() {
   }
   public Produto(String nome) {
       this.nome = nome;
   }
   public Produto(String nome, double preco) { // Corrigido para manter o padr√£o de nomes
       this.nome = nome;
       this.preco = preco;
   }
   public void exibir() { // M√©todo renomeado para seguir conven√ß√£o Java
       System.out.println("Nome: " + nome);
       System.out.println("Pre√ßo: " + preco);
   }
   public String getNome() {
       return this.nome;
   }
   public void setNome(String nome) { // Agora recebe um par√¢metro
       this.nome = nome;
   }
   public double getPreco() {
       return this.preco;
   }
   public void setPreco(double preco) { // Par√¢metro com nome correto
       this.preco = preco;
   }
}
package exercicios;
public class Porta {
   private boolean aberta; // Vari√°vel privada, n√£o pode ser acessada diretamente
   public Porta() {
       this.aberta = false; // A porta come√ßa fechada
   }
   public void abrir() {
       if (!aberta) {
           aberta = true;
           System.out.println("A porta foi aberta.");
       } else {
           System.out.println("A porta j√° est√° aberta.");
       }
   }
   public void fechar() {
       if (aberta) {
           aberta = false;
           System.out.println("A porta foi fechada.");
       } else {
           System.out.println("A porta j√° est√° fechada.");
       }
   }
   public boolean isAberta() { // M√©todo para consultar o estado da porta
       return aberta;
   }
}